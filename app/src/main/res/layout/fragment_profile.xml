<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu.fragment_profile"
    android:background="@color/stone">

    <LinearLayout
        android:id="@+id/field2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_provile_provile"
            style="@style/profile_btn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:drawableTop="@drawable/ic_baseline_person_24"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Provile" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_contact"
            style="@style/profile_btn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:drawableTop="@drawable/ic_baseline_contacts_24"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Contact" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_find"
            style="@style/profile_btn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:drawableTop="@drawable/ic_baseline_person_pin_24"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Find ME" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_about"
            style="@style/profile_btn"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:drawableTop="@drawable/ic_baseline_help_24"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Abaout" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/field2_btn"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp">

        <FrameLayout
            android:id="@+id/provile_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>


</LinearLayout>